map <leader>cc :botright cope<cr>
map <leader>n :cn<cr>
map <leader>p :cp<cr>

set number
set fdm=manual
let @c="0i//\<Esc>j"
nmap <C-c> @c
let @f="$zf%jn"
nmap <C-f> @f
